require 'telegram/bot'

token = '#' #token
Telegram::Bot::Client.run(token) do |bot|
  puts "Bot has started!"

  bot.listen do |message|
    case message.text
    when '/start'
    bot.api.send_message(chat_id: message.chat.id, text: "HI. #{message.from.first_name}")
  when '/settings'
      bot.api.send_message(chat_id: message.chat.id, text: "setting bot ")
    else
      bot.api.send_message(chat_id: message.chat.id, text: "noting commend")
    end
  end
end
